<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname %>(空白は登録できません)<br />
    <%= f.text_field :nickname, autocomplete: "email", id:"registration-nickname" %>
    <div id="nickname-error", class="red", hidden>※ニックネームの入力が必要です</div>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", id:"registration-email" %>
    <div id="email-error", class="red", hidden>※◯◯@◯◯の形での入力が必要です</div>
    <div id="email-error-uniq", class="red", hidden>※既に使われているメールアドレスです</div>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(半角英数字 <%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", id:"registration-password" %>
    <div id="password-error", class="red", hidden>※パスワードは半角英数字６文字以上です</div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", id:"registration-password-confirmation" %>
    <div id="password-confirmation-error", class="red", hidden>※パスワードと一致しません</div>
  </div>

      <div class='field'>
      <%= f.label :date %><br />
      <%= f.date_select :date, use_month_numbers: true,
                        start_year: 1930,
                        end_year: (Time.now.year - 10),
                        default: Date.new(1980, 1, 1) %>
    </div><br />

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %><br />
<%= render "devise/shared/links" %>
