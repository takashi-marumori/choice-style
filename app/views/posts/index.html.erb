        <h1>トップページ</h1><br />
        <h1>今日のスタイルを決める</h1>
        <%= search_form_for @p, url: search_posts_path do |f| %>
        <%= f.label :clothes_id, "スタイルの種類を選択" %>
        <%= f.collection_select(:clothes_id, Clothe.all, :id, :name, {}, {}) %><br />
        <%= f.label :season_id_eq, '季節を選択' %>
        <%= f.collection_select(:season_id_eq, Season.all, :id, :name, {}, {}) %><br />
        <%= f.label :gender_id_eq, 'ジャンルを選択' %>
        <%= f.collection_select(:gender_id_eq, Gender.all, :id, :name, {}, {}) %><br />
        <%= f.submit '検索' %>
        <% end %>