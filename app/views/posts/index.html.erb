<main class="main">
  <div class="inner">
    <div class="main-page">
      <div class="left-bar">
        <h1>トップページ</h1><br />
        <h1>今日のスタイルを決める</h1>
        <%= search_form_for @p, url: posts_search_path do |f| %>
        <%= f.label :season_id_eq, '季節は？' %>
        <%= f.collection_select(:season_id_eq, Season.all, :id, :name, {}, {}) %>
        <%= f.label :gender_id_eq, '性別は？' %>
        <%= f.collection_select(:gender_id_eq, Gender.all, :id, :name, {}, {}) %>
        <%= f.submit '検索' %>
        <% end %>
          <h5>ここにランダムに服を表示する</h5><br/>
      </div>
      <%= render partial:"main_page" %>
    </div>
  </div>