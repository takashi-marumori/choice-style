<div class="set-style">トップページ</div><br />
  <div class="style-set-main">
    <h2 class="style-set-title">身につけたいスタイルの条件を入力してください</h2>
        <%= search_form_for @p, url: search_posts_path do |f| %>
        <div class="style">
        <span class="indispensable">必須</span>
        <%= f.label :clothes_id, "スタイルの種類を選択" %><br />
        <%= f.collection_select(:clothes_id, Clothe.all, :id, :name, {}, {class: :style_label}) %>
        </div>

        <div class="style">
        <span class="indispensable">必須</span>
        <%= f.label :season_id_eq, '季節を選択' %><br />
        <%= f.collection_select(:season_id_eq, Season.all, :id, :name, {}, {class: :style_label}) %>
        </div>

        <div class="style">
        <span class="indispensable">必須</span>
          <%= f.label :gender_id_eq, 'ジャンルを選択' %><br />
          <%= f.collection_select(:gender_id_eq, Gender.all, :id, :name, {}, {class: :style_label}) %>
        </div>

        <div class="style">
        <%= f.submit '検索' %>
        </div>
        <% end %>
</div>