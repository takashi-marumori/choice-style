<% if user_signed_in?%>
  <div class="set-style">トップページ</div><br />
    <div class="style-set-main">
      <h2 class="style-set-title">身につけたいスタイルの条件を入力してください</h2>
          <%= search_form_for @p, url: search_posts_path do |f| %>
          <div class="style">
          <span class="indispensable">必須</span>
          <%= f.label :clothes_id_eq, "スタイルの種類を選択" %><br />
          <%= f.collection_select(:clothes_id_eq, Clothes.all, :id, :name, {}, {class: :style_label}) %>
          </div>

        <h2 class="style-set-title">さらに条件を選択する</h2>

          <div class="style">
        <span class="indispensable-blue">任意</span>
          <%= f.label :season_id_eq, '季節を選択' %><br />
          <%= f.collection_select(:season_id_eq, Season.where.not(id:1), :id, :name, {include_blank: '指定しない'}, {class: :style_label}) %>
          </div>

          <div class="style">
        <span class="indispensable-blue">任意</span>
            <%= f.label :gender_id_eq, 'ジャンルを選択' %><br />
            <%= f.collection_select(:gender_id_eq, Gender.where.not(id:1), :id, :name, {include_blank: '指定しない'}, {class: :style_label}) %>
          </div>

          <div class="style">
          <%= f.submit '検索', class:"search-btn" %>
          </div>
          <% end %>
  </div>
<% else %>
<div class="set-style">ご利用には、ログインまたは新規登録が必要です</div><br />

      <div class='select-reason-contents'>
        <h2 class='title'>このアプリケーションの詳細説明</h2>
    <ul class='reason-lists'>
      <li class='list'>
        <%= image_tag "image-1.png", class:"list-pict" %>
        <span class='reason-list-number'>1</span>
        <h3 class='reason-list-text'>
          <span class='reason-list-blue-text'>3分</span>
          ですぐに出品
        </h3>
        <p class='reason-list-description'>
          スマホで入力するだけで簡単に出品できる！
        </p>
      </li>
      <li class='list'>
        <%= image_tag "image-2.png", class:"list-pict" %>
        <span class='reason-list-number'>2</span>
        <h3 class='reason-list-text'>
          <span class='reason-list-blue-text'>3分</span>
          ですぐに出品
        </h3>
        <p class='reason-list-description'>
          スマホで入力するだけで簡単に出品できる！
        </p>
      </li>
    </ul>
  </div>
<% end%>