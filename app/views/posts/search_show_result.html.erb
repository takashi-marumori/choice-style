<div class="set-style">検索結果</div><br />
  <div class="style-set-main">
    <h2 class="style-set-title"></h2>
      <% if @results.length == 0 %>
      <h3>検索結果ヒットしませんでした</h3>
      <% else %>
      <div class="style">
        <% @results.each do |result| %>
          <%= link_to post_path(result) do %>
          <%= image_tag result.image.variant(resize: '100x100') %>
          <% end %>
        <% end %>
        </div>
      <% end %>
  </div>
<%= link_to 'もどる', root_path %>